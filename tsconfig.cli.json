{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "dist",
    "noEmit": false,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src/cli/**/*", "src/services/**/*", "src/types/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
